[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[dev-packages]

[packages]
sqlalchemy="*"
psycopg2-binary = "*"
pytest = "*"
mock = "*"
pytest-testdox = "*"
pytest-ordering = "*"
mock-alchemy = "*"

[requires]
python_version = "3.10"

[scripts]
start="python src/app.py"
test="pytest --testdox --color=yes"
init_migrations="alembic init ."
db_test="alembic current"
db_init="alembic revision --autogenerate -m \"Initial schema\""
db_update="alembic revision -m \"Migration\""
db_upgrade="alembic upgrade head"
